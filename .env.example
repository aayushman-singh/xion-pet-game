# XION Pet Game Environment Configuration
# Copy this file to .env.local and fill in your actual contract addresses

# XION Network Configuration
EXPO_PUBLIC_CHAIN_ID=xion-testnet-2
EXPO_PUBLIC_RPC_URL=https://rpc.xion-testnet-2.burnt.com:443

# Smart Contract Addresses (Get these from deployment/deploy.sh output)
EXPO_PUBLIC_USER_MAP_CONTRACT_ADDRESS=
EXPO_PUBLIC_PET_NFT_CONTRACT_ADDRESS=
EXPO_PUBLIC_ACHIEVEMENT_CONTRACT_ADDRESS=
EXPO_PUBLIC_PET_INTERACTION_CONTRACT_ADDRESS=

# Game Configuration
EXPO_PUBLIC_GAME_VERSION=1.0.0
EXPO_PUBLIC_MAX_PETS_PER_USER=10
EXPO_PUBLIC_DEFAULT_PET_STATS_HAPPINESS=100
EXPO_PUBLIC_DEFAULT_PET_STATS_ENERGY=100

# Development Settings (optional)
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_MOCK_WEB_DATA=true

# Abstraxion Configuration (for wallet integration)
EXPO_PUBLIC_ABSTRAXION_CONFIG_KEY=your-abstraxion-key-here